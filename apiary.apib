    + Headers

            Authorization: Basic eW91QGZvby5jb20gOiBOM3dzM2NyM3Q/

    + Body

            [
               {
                  "dataType": "BooleanType",
                  "key": "alpha",
                  "rawValue": "true"
               },
               {
                  "dataType": "Custom",
                  "key": "foo",
                  "rawValue": "12.3545"
               }
            ]

